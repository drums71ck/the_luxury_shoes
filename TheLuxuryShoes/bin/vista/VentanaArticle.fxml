<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.VentanaArticleController">
   <center>
      <AnchorPane prefHeight="490.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <children>
            <TitledPane animated="false" layoutY="-2.0" prefHeight="46.0" prefWidth="699.0" text="Titulo del articulo" />
            <Label fx:id="txtArticle" graphicTextGap="5.0" layoutX="284.0" layoutY="92.0" text="Article">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <ImageView fx:id="srcPerfil" fitHeight="97.0" fitWidth="92.0" layoutX="582.0" layoutY="62.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/logo.png" />
               </image>
            </ImageView>
            <Button fx:id="btnAddCart" layoutX="91.0" layoutY="386.0" mnemonicParsing="false" onMouseClicked="#btnAddCartOnClicked" prefHeight="39.0" prefWidth="109.0" text="Add to cart" />
            <Label layoutX="245.0" layoutY="152.0" prefHeight="33.0" prefWidth="212.0" text="Price: " />
            <Label layoutX="226.0" layoutY="194.0" prefHeight="35.0" prefWidth="212.0" text="Amount: " />
            <Label layoutX="236.0" layoutY="246.0" prefHeight="37.0" prefWidth="214.0" text="Brand:" />
            <Label layoutX="213.0" layoutY="282.0" prefHeight="34.0" prefWidth="214.0" text="Description: " />
            <ComboBox fx:id="boxSize" layoutX="256.0" layoutY="330.0" onMouseClicked="#MenuSize" prefWidth="150.0" promptText="Size" />
            <TextField fx:id="txtPrice" editable="false" layoutX="291.0" layoutY="156.0" prefHeight="26.0" prefWidth="89.0" />
            <TextField fx:id="txtAmount" editable="false" layoutX="293.0" layoutY="199.0" prefHeight="26.0" prefWidth="87.0" />
            <TextField fx:id="txtBrand" editable="false" layoutX="295.0" layoutY="251.0" prefHeight="26.0" prefWidth="83.0" />
            <TextField fx:id="txtDescript" editable="false" layoutX="295.0" layoutY="286.0" prefHeight="26.0" prefWidth="95.0" />
            <Button fx:id="btnShowme" layoutX="213.0" layoutY="386.0" mnemonicParsing="false" onMouseClicked="#btnShowMeOnClicked" prefHeight="39.0" prefWidth="109.0" text="Show Details" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
